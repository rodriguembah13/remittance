{% extends 'base.html.twig' %}

{% block title %}All-Gateway method{% endblock %}
 {% block breadcrumb %}
     <nav class="page-breadcrumb">
         <ol class="breadcrumb">
             <li class="breadcrumb-item"><a href="#">Gateway method</a></li>
             <li class="breadcrumb-item active" aria-current="page">List</li>
         </ol>
     </nav>
 {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-header bg-primary">
                    <h5 class="card-title">Gateway methods</h5>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="float-right btn btn-sm btn-success"  data-bs-toggle="modal" data-bs-target="#varyingModal" data-bs-whatever="@getbootstrap">
                            <i data-feather="plus"></i> Nouveau</a>
                    </div>
                </div>
                <div class="card-body">
                    <div id="agents_table">{{ 'loading'|trans({}, 'messages') }}</div>
                </div>
            </div></div>
    </div>
    <div class="modal fade" id="varyingModal" tabindex="-1" aria-labelledby="varyingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="varyingModalLabel">Add gateway method</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="btn-close"></button>
                </div>
                <form id="form_founds" action="{{ path('app_static_gateway_new') }}" method="post">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-4 mb-3">
                                <label for="message-text" class="form-label">Name</label>
                                <input type="text" name="name" class="form-control" id="recipient-name">
                            </div>
                            <div class="col-4 mb-3">
                                <label for="message-text" class="form-label">Currency</label>
                                <input type="text" name="currency" class="form-control" id="recipient-name">
                            </div>
                            <div class="col-4 mb-3">
                                <label for="message-text" class="form-label">Rate</label>
                                <div class="input-group">
                                <div class="input-group-text input-group-addon">
                                    <span id="flag_after" class="">1 USD=</span>
                                </div>
                                <input type="number" name="rate" class="form-control" id="recipient-name">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-success">
                                        <h5>Range</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label for="message-text" class="form-label">Min Amount</label>
                                            <input type="number" name="minamount" class="form-control" id="recipient-name">
                                        </div>
                                        <div class="mb-3">
                                            <label for="message-text" class="form-label">Max amount</label>
                                            <input type="number" name="maxamount" class="form-control" id="recipient-name">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-success">
                                        <h5>Charge</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label for="message-text" class="form-label">Fixed charge</label>
                                            <input type="number" name="fixedcharge" class="form-control" id="recipient-name">
                                        </div>
                                        <div class="mb-3">
                                            <label for="message-text" class="form-label">Percent charge</label>
                                            <input type="number" name="percentcharge" class="form-control" id="recipient-name">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="message-text" class="form-label">Instruction</label>
                                <textarea type="text" name="instruction" class="form-control" rows="4"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save gateways</button>
                    </div> </form>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('#agents_table').initDataTables({{ datatable_settings(datatable) }});
        });
    </script>
{% endblock %}


