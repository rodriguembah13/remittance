{% extends 'base.html.twig' %}

{% block title %}Source founds{% endblock %}
 {% block breadcrumb %}
     <nav class="page-breadcrumb">
         <ol class="breadcrumb">
             <li class="breadcrumb-item"><a href="#">Source founds</a></li>
             <li class="breadcrumb-item active" aria-current="page">Source founds</li>
         </ol>
     </nav>
 {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-header bg-primary">
                    <h5 class="card-title">Source founds</h5>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="float-right btn btn-sm btn-success"  data-bs-toggle="modal" data-bs-target="#varyingModal" data-bs-whatever="@getbootstrap">
                            <i data-feather="plus"></i> Nouveau</a>
                    </div>
                </div>
                <div class="card-body">
                    <div id="found_table">{{ 'loading'|trans({}, 'messages') }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="varyingModal" tabindex="-1" aria-labelledby="varyingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="varyingModalLabel">Add source founds</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="btn-close"></button>
                </div>
                <form id="form_founds" action="{{ path('app_static_source_new') }}" method="post">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="message-text" class="form-label">Name</label>
                                    <input type="text" name="name" class="form-control" id="recipient-name">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save funds</button>
                    </div> </form>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('#found_table').initDataTables({{ datatable_settings(datatable) }});
        });
    </script>
{% endblock %}
