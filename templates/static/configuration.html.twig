{% extends 'base.html.twig' %}
{% block title %}
R|Configuration
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-header bg-primary">
                <h4>Configuration</h4>
            </div>
            <div class="card-body">
                <div class="row">
                <div class="col-6 mb-3">
                    <label for="message-text" class="form-label">Currency:</label>
                    <input value="{{ configuration.currency }}" type="text" name="currency" class="form-control"
                           id="recipient-name">
                </div>
                <div class="col-6 mb-3">
                    <label for="message-text" class="form-label">Symbol:</label>
                    <input value="{{ configuration.symbole }}" type="text" name="currency" class="form-control"
                           id="recipient-name">
                </div>
                <div class="col-6 mb-3">
                    <label for="message-text" class="form-label">Fixed commision:</label>
                    <input value="{{ configuration.fixedcommission }}" type="text" name="currency" class="form-control"
                           id="recipient-name">
                </div>
                <div class="col-6 mb-3">
                    <label for="message-text" class="form-label">Fixed percent:</label>
                    <input value="{{ configuration.percentcommision }}" type="text" name="currency" class="form-control"
                           id="recipient-name">
                </div>
                </div>
                <div class="modal-footer">
                   <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </div>
</div>
    {% endblock %}



