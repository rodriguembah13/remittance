{% extends 'base.html.twig' %}
{% block title %}
Remittance|edit gateway
{% endblock %}
 {% block breadcrumb %}
     <nav class="page-breadcrumb">
         <ol class="breadcrumb">
             <li class="breadcrumb-item"><a href="#">Gateway method</a></li>
             <li class="breadcrumb-item active" aria-current="page">Edit</li>
         </ol>
     </nav>
 {% endblock %}
{% block body %}

    <div class="card">
        <div class="card-body">
            <form id="form_founds" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-4 mb-3">
                            <label for="message-text" class="form-label">Name</label>
                            <input type="text" value="{{ gatewaymethod.name }}" name="name" class="form-control" id="recipient-name">
                        </div>
                        <div class="col-4 mb-3">
                            <label for="message-text" class="form-label">Currency</label>
                            <input type="text" value="{{ gatewaymethod.currency }}" name="currency" class="form-control" id="recipient-name">
                        </div>
                        <div class="col-4 mb-3">
                            <label for="message-text" class="form-label">Rate</label>
                            <div class="input-group">
                                <div class="input-group-text input-group-addon">
                                    <span id="flag_after" class="">1 USD=</span>
                                </div>
                                <input value="{{ gatewaymethod.rate }}" type="number" name="rate" class="form-control" id="recipient-name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="card">
                                <div class="card-header bg-success">
                                    <h5>Range</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="message-text" class="form-label">Min Amount</label>
                                        <input value="{{ gatewaymethod.minamount }}" type="number" name="minamount" class="form-control" id="recipient-name">
                                    </div>
                                    <div class="mb-3">
                                        <label for="message-text" class="form-label">Max amount</label>
                                        <input type="number" value="{{ gatewaymethod.maxamount }}" name="maxamount" class="form-control" id="recipient-name">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card">
                                <div class="card-header bg-success">
                                    <h5>Charge</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="message-text" class="form-label">Fixed charge</label>
                                        <input type="number" value="{{ gatewaymethod.fixedcharge }}" name="fixedcharge" class="form-control" id="recipient-name">
                                    </div>
                                    <div class="mb-3">
                                        <label for="message-text" class="form-label">Percent charge</label>
                                        <input type="number" name="percentcharge" value="{{ gatewaymethod.percentcharge }}" class="form-control" id="recipient-name">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label for="message-text" class="form-label">Instruction</label>
                            <textarea value="{{ gatewaymethod.instruction }}" type="text" name="instruction" class="form-control" rows="4"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save gateways</button>
                </div> </form>

        </div>
    </div>
{% endblock %}



